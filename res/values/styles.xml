<resources>

   
    <style name="Theme.Gtarc" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_gtarc</item>
        <item name="popupMenuStyle">@style/PopupMenu.Gtarc</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Gtarc</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Gtarc</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Gtarc</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Gtarc</item>
        <item name="actionModeBackground">@drawable/cab_background_top_gtarc</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_gtarc</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Gtarc</item>

        
    </style>

    <style name="ActionBar.Solid.Gtarc" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_gtarc</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_gtarc</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_gtarc</item>
        <item name="progressBarStyle">@style/ProgressBar.Gtarc</item>
    </style>

    <style name="ActionBar.Transparent.Gtarc" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_gtarc</item>
        <item name="progressBarStyle">@style/ProgressBar.Gtarc</item>
    </style>
	
    <style name="PopupMenu.Gtarc" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_gtarc</item>	
    </style>
	
    <style name="DropDownListView.Gtarc" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_gtarc</item>
    </style>

    <style name="ActionBarTabStyle.Gtarc" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_gtarc</item>
    </style>
	
    <style name="DropDownNav.Gtarc" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_gtarc</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_gtarc</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_gtarc</item>
    </style>
    
    <style name="ProgressBar.Gtarc" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_gtarc</item>
    </style>
    
    <style name="ActionButton.CloseMode.Gtarc" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_gtarc</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Gtarc.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Gtarc</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Gtarc</item>
    </style>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
 <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">22sp</item>
    </style>
    
</resources>
